    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tree_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tree_icon"
        android:supportsRtl="true"
        android:textColorHint="#4B4951"
        android:theme="@style/Theme.HelpTree">

        <!-- DECLARAÇÃO DAS ATIVIDADES DO PROJETO -->

        <activity android:name=".AccountActivity"></activity>
        <activity android:name=".HomeActivity"></activity>
        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".MapActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:value="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
